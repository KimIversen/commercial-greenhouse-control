# Copy this file to secrets.yaml and update with your actual values
# DO NOT commit secrets.yaml to GitHub!

# Location (update with your greenhouse coordinates)
latitude: 59.2761
longitude: 5.2034
elevation: 10

# Database (these will be auto-generated by deployment script)
db_url: mysql://homeassistant:YOUR_HA_PASSWORD@greenhouse_mariadb:3306/homeassistant?charset=utf8mb4

# MQTT (these will be auto-generated by deployment script)
mqtt_username: greenhouse
mqtt_password: YOUR_MQTT_PASSWORD

# SMTP Configuration (update with your email provider)
smtp_server: smtp.gmail.com
smtp_sender: greenhouse@yourdomain.com
smtp_username: your-email@gmail.com
smtp_password: your-app-password

# Admin Contact
admin_email: admin@yourdomain.com

# Additional secrets can be added here as needed
# weather_api_key: your_weather_api_key
# pushover_api_key: your_pushover_key
# twilio_account_sid: your_twilio_sid
